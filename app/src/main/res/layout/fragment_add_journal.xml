<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFF9E1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Journal"
        android:textSize="24sp"
        android:fontFamily="sans-serif-medium"
        android:padding="8dp"
        android:gravity="center"
        android:background="#FFEB3B"
        android:textColor="#000000"
        android:layout_gravity="center_horizontal" />

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:stepSize="1"
        android:layout_marginTop="16dp"
        android:layout_gravity="center_horizontal" />

    <Button
        android:id="@+id/btnAddPhotos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Photos and Videos"
        android:backgroundTint="#D3D3D3"
        android:textColor="#000000"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Write down your thoughts:"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/editTextThoughts"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:backgroundTint="#D3D3D3"
        android:hint="Share your experience here"
        android:gravity="top"
        android:padding="8dp" />

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:backgroundTint="#80726C"
        android:textColor="#FFFFFF"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp" />

    <!-- New Add Expense Button -->
    <Button
        android:id="@+id/btnAddExpense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Expense"
        android:backgroundTint="#D3D3D3"
        android:textColor="#000000"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp" />
</LinearLayout>

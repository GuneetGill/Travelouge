    <ImageView
        android:layout_width="184dp"
        android:layout_height="189dp"
        android:layout_gravity="center"
        android:src="@drawable/boarding_pass_sample" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
